{
  "name": "blocklock-js",
  "version": "0.0.2",
  "description": "A library for encrypting and decrypting data for the future",
  "types": "index.d.ts",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build:solidity && npm run build:generate && npm run build:js && npm run build:types",
    "build:solidity": "pushd ./blocklock-solidity && forge build && popd",
    "build:generate": "mkdir -p src/generated && npx typechain --target ethers-v6 --out-dir src/generated './blocklock-solidity/out/*.sol/*.json'",
    "build:js": "esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=index.js",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf index.js index.d.ts",
    "lint": "eslint src",
    "lint:fix": "eslint --fix",
    "test": "jest ./test/*.test.ts"
  },
  "keywords": [
    "conditional",
    "timelock",
    "encryption",
    "dcrypt",
    "randamu",
    "threshold",
    "evm",
    "ethereum"
  ],
  "author": "CluEleSsUK",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/randa-mu/blocklock-js.git"
  },
  "bugs": {
    "url": "https://github.com/randa-mu/blocklock-js/issues"
  },
  "homepage": "https://github.com/randa-mu/blocklock-js#readme",
  "dependencies": {
    "@noble/curves": "^1.6.0",
    "@noble/hashes": "^1.5.0",
    "asn1js": "^3.0.5",
    "buffer": "^6.0.3",
    "ethers": "^6.13.4",
    "mcl-wasm": "^1.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.5",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "ganache": "^7.9.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.11.0"
  },
  "engines": {
    "node": ">= 22.0.0"
  }
}
